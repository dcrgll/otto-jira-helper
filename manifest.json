{
  "manifest_version": 3,
  "name": "Otto - Jira Helper",
  "description": "A helper for accessing Jira tickets",
  "version": "1.0",
  "author": "Dan Cargill",
  "action": {
    "default_popup": "index.html",
    "default_icon": "img/128.png",
    "default_title": "Otto - Jira Helper"
  },
  "icons": {
    "16": "img/16.png",
    "48": "img/48.png",
    "128": "img/128.png"
  },
  "homepage_url": "https://github.com/dcrgll/otto-jira-helper",
  "omnibox": { "keyword": "otto" },
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": ["storage"]
}
